<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
		<div class='wrap'>
			<header class="primaryNav d-flex justify-content-between align-items-center">
			  <h1><%= link_to 'Flixter', root_path, class: 'primaryNav-logo' %></h1>
		    <nav class="primaryNav-links">
		    	<% if user_signed_in? %>
		    		<%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'mr-1 btn btn-clear' %>
	        <% else %>
	        	<a class='mr-1 btn btn-clear' href='#' data-toggle="modal" data-target="#logInModal">Log In</a>
	        	<%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-cta" %>
	        <% end %>
	   		</nav>
	  	</header>
		</div>
		<main>
			<!-- Sign In Modal -->
			<div class="modal fade" id="logInModal" tabindex="-1" role="dialog" aria-labelledby="logInModalLabel" aria-hidden="true">
			  <div class="modal-dialog" role="document">
			    <div class="modal-content">
			      <div class="modal-header">
			      	<h4 class="modal-title" id="photoModalLabel">Sign In</h4>
			        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
			          <span aria-hidden="true">Ã—</span>
			        </button>
			      </div>
			     	
		      	<div class="modal-body">
	        		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
							  <div class="form-inputs">
							    <%= f.input :email, required: false, autofocus: true %>
							    <%= f.input :password, required: false %>
							    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
							  </div>
						</div>
			      <div class="modal-footer">
			      	<div class="form-actions">
						    <%= f.button :submit, "Log In", class: 'btn btn-cta mb-2 mr-1' %>
						    <button type="button" class="btn btn-clear mb-2" data-dismiss="modal">Cancel</button><br/>
						  	<%= link_to 'Forgot your Password?', new_user_password_path %>
						  </div>
			      </div>

			      <% end %>
				  </div>
				</div>
			</div>
			<%= yield %>
		</main>

		<footer>
			<div id="footer">
	      <div class="container">
	        <b>Footer Here</b>
	        <br />
	        <%= link_to 'Link', '#' %>
	      </div>
	    </div>
		</footer>
  </body>
</html>
